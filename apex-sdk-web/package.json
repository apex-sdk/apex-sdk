{
  "name": "apex-sdk-docs",
  "description": "Official documentation site for Apex SDK Protocol",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "echo 'Linting temporarily disabled - ESLint config needs update'",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "npm run lint && npm run type-check && npm run build",
    "build:rustdoc": "RUSTDOCFLAGS=\"--extend-css $(pwd)/public/rustdoc.css\" cargo doc --no-deps",
    "validate-content": "node scripts/validate-content.js",
    "new-content": "node scripts/new-content.js",
    "content:validate": "npm run validate-content",
    "content:new": "npm run new-content"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "^16.1.1",
    "@types/mdx": "^2.0.13",
    "gray-matter": "^4.0.3",
    "next": "^16.1.6",
    "next-mdx-remote": "^5.0.0",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.1",
    "globals": "^17.0.0",
    "jiti": "^2.6.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "typescript-eslint": "^8.52.0"
  }
}